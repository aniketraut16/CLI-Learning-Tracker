{
  "compilerOptions": {
    "outDir": "./dist", // Output directory for compiled JavaScript
    "rootDir": "./src", // Root directory for TypeScript files
    "target": "ES6", // JavaScript version to compile to
    "module": "commonjs", // Module system
    "strict": true, // Enables strict type-checking options
    "esModuleInterop": true // Allows default import syntax for CommonJS modules
  },
  "include": ["src/**/*.ts"], // Includes all .ts files in src
  "exclude": ["node_modules"] // Excludes unnecessary folders
}
